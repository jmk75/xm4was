<?xml version="1.0"?>
<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>xm4was-${project.version}</baseDirectory>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>plugins</outputDirectory>
            <includes>
                <include>${project.groupId}:${project.groupId}.*:jar</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}_${artifact.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>${project.groupId}:jmx-client-connector:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/main/scripts</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>
